<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/emptyIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_no_transaction" />

    <TextView
        android:id="@+id/emptyTitle"
        style="@style/HeadingTitle"
        android:layout_marginTop="16dp"
        android:text="@string/no_transaciton"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/emptyIcon"
        app:layout_constraintStart_toStartOf="@+id/emptyIcon"
        app:layout_constraintTop_toBottomOf="@+id/emptyIcon" />

    <TextView
        android:id="@+id/emptyContent"
        style="@style/BodyContent"
        android:layout_width="256dp"
        android:text="@string/no_transaction_desc"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/emptyTitle"
        app:layout_constraintStart_toStartOf="@+id/emptyTitle"
        app:layout_constraintTop_toBottomOf="@+id/emptyTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>