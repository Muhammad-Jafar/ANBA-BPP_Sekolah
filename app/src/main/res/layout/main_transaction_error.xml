<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/errorIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ill_error_network" />

    <TextView
        android:id="@+id/errorTitle"
        style="@style/HeadingTitle"
        android:layout_marginTop="16dp"
        android:text="@string/no_internet_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/errorIcon"
        app:layout_constraintStart_toStartOf="@+id/errorIcon"
        app:layout_constraintTop_toBottomOf="@+id/errorIcon" />

    <TextView
        android:id="@+id/errorContent"
        style="@style/BodyContent"
        android:layout_width="256dp"
        android:text="@string/no_internet_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/errorTitle"
        app:layout_constraintStart_toStartOf="@+id/errorTitle"
        app:layout_constraintTop_toBottomOf="@+id/errorTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>