<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/errorNetworkIcon"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ill_error_network" />

    <TextView
        android:id="@+id/emptyTitle"
        style="@style/HeadingSubTitle"
        android:text="Gagal memuat data"
        app:layout_constraintEnd_toEndOf="@+id/errorNetworkIcon"
        app:layout_constraintStart_toStartOf="@+id/errorNetworkIcon"
        app:layout_constraintTop_toBottomOf="@+id/errorNetworkIcon" />

    <TextView
        android:id="@+id/emptyContent"
        style="@style/BodySubContent"
        android:text="Silahkan coba lagi atau periksa kondisi internet anda."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/emptyTitle"
        app:layout_constraintStart_toStartOf="@+id/emptyTitle"
        app:layout_constraintTop_toBottomOf="@+id/emptyTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>