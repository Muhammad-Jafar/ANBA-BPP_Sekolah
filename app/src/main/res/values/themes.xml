<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.KomiteKu" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorSurfaceVariantCustom">@color/md_theme_light_surfaceVariantCustom</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="colorRoseContainer">#66FFB3AB</item>
        <item name="colorLeafContainer">#66B1FFA9</item>
        <item name="colorOrangeContainer">#66FFDCA8</item>

        <item name="fontFamily">@font/nunito_regular</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="28">true</item>
    </style>

    <!-- Splashscreen theme -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@raw/app_logo_splash</item>
        <item name="windowSplashScreenBackground">@color/md_theme_light_background</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.KomiteKu</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="28">true</item>
    </style>

    <!-- AppBar Layout & Toolbar Theme -->
    <style name="CustomAppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomCollapseMedium" parent="Widget.Material3.CollapsingToolbar.Medium">
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitle</item>
        <item name="expandedTitleTextAppearance">@style/CustomTitleCollapseExpanded</item>
        <item name="titleCollapseMode">fade</item>
        <item name="expandedTitleMarginStart">24dp</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="CustomTitleCollapseExpanded" parent="TextAppearance.Material3.HeadlineSmall" />

    <!-- Text UI Theme -->
    <style name="HeadingApp" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="HeadlineTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="HeadingTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="HeadingSubTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

    <style name="BodyTitle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="BodySubTitle" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="BodyHeadContent" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="BodyContent" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_light</item>
    </style>

    <style name="BodySubContent" parent="TextAppearance.Material3.BodySmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_light</item>
    </style>

    <!-- First Button Theme -->
    <style name="CustomFilledButton" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/HeadingSubTitle</item>
    </style>

    <!-- Second Button Theme -->
    <style name="CustomTextButton" parent="@style/Widget.Material3.Button.TextButton.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">?attr/colorControlActivated</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="android:textAppearance">@style/HeadingSubTitle</item>
    </style>

    <!-- Third Button Theme -->
    <style name="CustomTonalButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/HeadingSubTitle</item>
    </style>

    <!-- Custom Fab Theme -->
    <style name="CustomExtendedFab" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <!-- Custom LoadingBar Theme -->
    <style name="CustomDialogLoading" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:windowMinWidthMajor">8dp</item>
        <item name="android:windowMinWidthMinor">8dp</item>
    </style>

    <!-- Custom TextInput Theme -->
    <style name="CustomInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceVariantCustom</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="CustomInputText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/nunito_medium</item>
    </style>

</resources>
